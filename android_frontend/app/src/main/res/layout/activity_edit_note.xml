<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sm_background"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/SoftMono.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="@string/title_new_note" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_16">

            <EditText
                android:id="@+id/input_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_title"
                android:textColor="@color/sm_text"
                android:textColorHint="@color/sm_secondary"
                android:textSize="18sp"
                android:background="@android:color/transparent"
                android:padding="@dimen/space_8" />

            <EditText
                android:id="@+id/input_content"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="top|start"
                android:hint="@string/hint_content"
                android:textColor="@color/sm_text"
                android:textColorHint="@color/sm_secondary"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:padding="@dimen/space_8"
                android:layout_marginTop="@dimen/space_12"
                android:overScrollMode="never"
                android:inputType="textMultiLine"
                android:maxLength="5000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_category"
                android:textColor="@color/sm_secondary"
                android:layout_marginTop="@dimen/space_16" />

            <Spinner
                android:id="@+id/input_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
